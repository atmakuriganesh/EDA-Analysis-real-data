import os
import pandas as pd

def read_excel_files(folder_path):
    """Read all Excel files in a folder without extracting specific columns."""
    excel_data = {}
    
    for file in os.listdir(folder_path):
        if file.endswith(".xls") or file.endswith(".xlsx"):
            file_path = os.path.join(folder_path, file)
            xls = pd.ExcelFile(file_path)
            
            file_sheets = {}
            for sheet_name in xls.sheet_names:
                df = pd.read_excel(xls, sheet_name=sheet_name, header=None)  # Read sheet without header
                file_sheets[sheet_name] = df
            
            excel_data[file] = file_sheets
    
    return excel_data

# Example usage
folder_path = "path/to/your/folder"  # Change this to your folder path
excel_files_data = read_excel_files(folder_path)
print("Excel files read successfully.")

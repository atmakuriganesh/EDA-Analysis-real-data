# Merge all dataframes in the cleaned_dataframes dictionary
def merge_all_dataframes(dataframes_dict):
    # Convert the dictionary values to a list of dataframes
    dfs_list = list(dataframes_dict.values())
    
    # Use pd.concat to combine all dataframes
    # sort=False keeps the original column order
    # ignore_index=True resets the index
    # join='outer' ensures all columns from all dataframes are included
    merged_df = pd.concat(dfs_list, sort=False, ignore_index=True, join='outer')
    
    # Missing values in columns not present in some dataframes will be NaN
    return merged_df

# Apply the function to merge all your dataframes
merged_dataframe = merge_all_dataframes(cleaned_dataframes)

# Check the shape and columns of the merged dataframe
print(f"Merged dataframe shape: {merged_dataframe.shape}")
print(f"Merged dataframe columns: {merged_dataframe.columns.tolist()}")

